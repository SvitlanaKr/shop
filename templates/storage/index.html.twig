{% extends 'base.html.twig' %}

{% block title %}Storage index{% endblock %}

{% block body %}
    <h1>Storage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for storage in storages %}
            <tr>
                <td>{{ storage.id }}</td>
                <td>{{ storage.name }}</td>
                <td>{{ storage.phone }}</td>
                <td>{{ storage.adress }}</td>
                <td>
                    <a href="{{ path('storage_show', {'id': storage.id}) }}">show</a>
                    <a href="{{ path('storage_edit', {'id': storage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('storage_new') }}">Create new</a>
{% endblock %}
